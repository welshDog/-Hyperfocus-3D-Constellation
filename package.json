{
  "name": "hyperfocus-3d-constellation",
  "version": "1.0.0",
  "type": "module",
  "description": "The world's most advanced 3D repository visualization designed for neurodivergent minds",
  "main": "app.js",
  "scripts": {
    "dev": "http-server -p 8080 -c-1",
    "build:lighthouse": "lighthouse https://welshdog.github.io/-Hyperfocus-3D-Constellation/ --output=json --output-path=./reports/lighthouse.json",
    "test": "jest",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,md}\"",
    "audit": "npm audit --audit-level=moderate",
    "analyze": "npm run lint && npm run format:check && npm run test",
    "a11y:audit": "axe https://welshdog.github.io/-Hyperfocus-3D-Constellation/"
  },
  "keywords": [
    "3d",
    "visualization",
    "github",
    "repository",
    "neurodivergent",
    "accessibility",
    "three.js",
    "web-audio-api",
    "interactive"
  ],
  "author": "Lyndz Williams",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/welshDog/-Hyperfocus-3D-Constellation.git"
  },
  "bugs": {
    "url": "https://github.com/welshDog/-Hyperfocus-3D-Constellation/issues"
  },
  "homepage": "https://github.com/welshDog/-Hyperfocus-3D-Constellation",
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "axe-core": "^4.8.2",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "playwright": "^1.40.1",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "testMatch": [
      "**/tests/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "collectCoverageFrom": [
      "audio.js",
      "app.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 65,
        "functions": 70,
        "lines": 70
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "always"
  }
}
